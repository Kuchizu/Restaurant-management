<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="001-create-file-metadata-table" author="restaurant-system">
        <createTable tableName="file_metadata">
            <column name="id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="original_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="stored_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="content_type" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="file_size" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="bucket" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="file_url" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="category" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="entity_id" type="BIGINT"/>
            <column name="uploaded_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="uploaded_by" type="VARCHAR(100)"/>
        </createTable>

        <createIndex tableName="file_metadata" indexName="idx_file_metadata_category">
            <column name="category"/>
        </createIndex>

        <createIndex tableName="file_metadata" indexName="idx_file_metadata_entity_id">
            <column name="entity_id"/>
        </createIndex>

        <createIndex tableName="file_metadata" indexName="idx_file_metadata_uploaded_at">
            <column name="uploaded_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
