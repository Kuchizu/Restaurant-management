<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="001-create-ingredients-table" author="system">
        <createTable tableName="ingredients">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="unit" type="VARCHAR(50)"/>
            <column name="description" type="VARCHAR(500)"/>
        </createTable>
    </changeSet>

    <changeSet id="002-create-suppliers-table" author="system">
        <createTable tableName="suppliers">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="contact_person" type="VARCHAR(100)"/>
            <column name="phone" type="VARCHAR(20)"/>
            <column name="email" type="VARCHAR(100)"/>
            <column name="address" type="VARCHAR(200)"/>
        </createTable>
    </changeSet>

    <changeSet id="003-create-inventory-table" author="system">
        <createTable tableName="inventory">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ingredient_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="min_quantity" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="max_quantity" type="DECIMAL(10,2)"/>
            <column name="last_updated" type="TIMESTAMP"/>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="inventory"
                baseColumnNames="ingredient_id"
                constraintName="fk_inventory_ingredient"
                referencedTableName="ingredients"
                referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="004-create-supply-orders-table" author="system">
        <createTable tableName="supply_orders">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="supplier_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="order_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="delivery_date" type="TIMESTAMP"/>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="total_cost" type="DECIMAL(10,2)"/>
            <column name="notes" type="VARCHAR(500)"/>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="supply_orders"
                baseColumnNames="supplier_id"
                constraintName="fk_supply_order_supplier"
                referencedTableName="suppliers"
                referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="005-create-supply-order-ingredients-table" author="system">
        <createTable tableName="supply_order_ingredients">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="supply_order_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="ingredient_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="unit_price" type="DECIMAL(10,2)"/>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="supply_order_ingredients"
                baseColumnNames="supply_order_id"
                constraintName="fk_soi_supply_order"
                referencedTableName="supply_orders"
                referencedColumnNames="id"/>
        <addForeignKeyConstraint
                baseTableName="supply_order_ingredients"
                baseColumnNames="ingredient_id"
                constraintName="fk_soi_ingredient"
                referencedTableName="ingredients"
                referencedColumnNames="id"/>
    </changeSet>

